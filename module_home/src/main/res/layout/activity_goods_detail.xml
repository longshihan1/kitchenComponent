<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huazhuhotel.module_home.detail.ui.GoodsDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goodsdetail_type_firsttv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="配方"
                android:textSize="16dp"/>

            <View
                android:id="@+id/goodsdetail_type_firstline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_273261"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goodsdetail_type_secondtv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="做法"
                android:textSize="16dp"/>

            <View
                android:id="@+id/goodsdetail_type_secondline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_273261"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goodsdetail_type_thridtv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="交流"
                android:textSize="16dp"/>

            <View
                android:id="@+id/goodsdetail_type_thridline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_273261"
                android:visibility="invisible"
                />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/goodsdetail_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
