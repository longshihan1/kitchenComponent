<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--setting linear的相关属性-->
    <attr name="leftImage" format="reference"/>
    <attr name="leftImagewidth" format="dimension"/>
    <attr name="leftmarginText" format="dimension"/>
    <attr name="rightImageheight" format="dimension"/>
    <attr name="rightimage_show" format="boolean"/>
    <attr name="settingText" format="string"/>

    <attr name="rightImage" format="reference"/>
    <attr name="textsize" format="dimension"/>
    <attr name="leftImageheight" format="dimension"/>
    <attr name="rightImagewidth" format="dimension"/>
    <attr name="leftmargin" format="dimension"/>
    <attr name="rightmargin" format="dimension"/>

    <!--main下的tab-->
    <declare-styleable name="HomeTabLayout">
        <attr name="tabText" format="string"/>
        <attr name="tabImage" format="reference"/>
        <attr name="tabPosition" format="integer"/>
        <attr name="imagemargintext" format="dimension"/>
        <attr name="imagewh" format="dimension"/>
        <attr name="imageww" format="dimension"/>
        <attr name="tabtextsize" format="dimension"/>
        <attr name="tabtextcolor" format="dimension"/>
    </declare-styleable>

    <!--设置设置界面的list-->
    <declare-styleable name="settinglinear">
        <attr name="settingText"/>
        <attr name="leftImage"/>
        <attr name="rightImage"/>
        <attr name="textsize"/>
        <attr name="leftImagewidth"/>
        <attr name="leftImageheight"/>
        <attr name="rightImagewidth"/>
        <attr name="rightImageheight"/>
        <attr name="leftmargin"/>
        <attr name="leftmarginText"/>
        <attr name="rightmargin"/>
        <attr name="rightimage_show"/>
        <attr name="leftImage_show" format="boolean"/>
        <attr name="righttext_show" format="boolean"/>
        <attr name="righttext" format="string"/>
        <attr name="righttext_marginleft" format="dimension"/>
        <attr name="righttext_textsize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="AutoTabLayout">
        <attr name="auto_textSize_base_width" format="boolean"></attr>
    </declare-styleable>
</resources>
