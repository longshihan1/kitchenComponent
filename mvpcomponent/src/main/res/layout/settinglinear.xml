<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:background="@color/white">
    <ImageView
        android:id="@+id/settinglinear_leftimage"
        android:layout_width="@dimen/settinglistitem_image"
        android:layout_height="@dimen/settinglistitem_image"
        android:layout_marginLeft="@dimen/margin_right"/>

    <TextView
        android:id="@+id/settinglinear_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_right"
        android:layout_weight="1"
        android:text="最左边的文字"/>

    <TextView
        android:id="@+id/settinglinear_righttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_right"
        android:text="@string/app_name"/>

    <ImageView
        android:id="@+id/settinglinear_rightimage"
        android:layout_width="@dimen/rightimage_width"
        android:layout_height="@dimen/rightimage_height"
        android:layout_marginRight="@dimen/margin_right"/>
</LinearLayout>
